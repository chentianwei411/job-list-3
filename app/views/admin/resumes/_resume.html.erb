<div class="panel panel-primary">
  <div class="panel-heading">
    <div class="row">
      <div class="col-md-12">
        <% if resume.user.present?%>
        <div><%= resume.user.email %></div>
        <% else %>
          <%= resume.user%>
        <%end%>
      </div>
    </div>
  </div>
  <div class="panel-body"><%= simple_format(resume.content)%></div>
  <div class="panel-footer">
    <% if resume.attachment.present? %>
      <%= link_to("Download Resume", resume.attachment_url ) %>
    <% else %>
       NO attachment
    <% end %>
  </div>
</div>
