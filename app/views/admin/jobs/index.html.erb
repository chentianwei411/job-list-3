
<div class="table-responsive">
  <div class="pull-right">
    <%= link_to("Add a job", new_admin_job_path, class:"btn btn-default btn-xs")%>
  </div>
  <table class="table table-striped custab">
    <thead>
      <tr>
        <th class="success">Title</th>
        <th>投递简历数量</th>
        <th>薪资上限</th>
        <th>薪资下限</th>
        <th>发布时间</th>
      </tr>
    </thead>
    <tbody>
        <% @jobs.each do |job| %>
          <tr>
            <td>
              <%= render_job_status(job)%>
              <%= link_to(job.title,admin_job_path(job)) %>
            </td>
            <td><%= link_to(job.resumes.count,admin_job_resumes_path(job))%></td>
            <td><%= job.wage_lower_bound %></td>
            <td><%= job.wage_upper_bound %></td>
            <td><%= job.created_at %></td>
            <td><%= link_to("Edit", edit_admin_job_path(job),:class => "btn btn-xs btn-info")%>
                <%= link_to("Destroy", admin_job_path(job), method: :delete,
                            data: {confirm:"Are you sure?"}, :class => "btn btn-xs btn-danger")%>

                <% if job.is_hidden %>
                  <%= link_to("publish", publish_admin_job_path(job), method: :patch,class:"btn btn-xs bnt-default")%>
                <% else %>
                  <%= link_to("hide", hide_admin_job_path(job),:method => :patch,class:"btn btn-xs bnt-default")%>
                <% end %>
            </td>
          </tr>
        <% end %>
    </tbody>
  </table>
</div>
