<% if flash.any?%>
  <% user_facing_flashes.each do |key,value| %>
    <div class="alert alert-dismissable alert-<%= flash_class(key)%> " role="alert">
      <button class="close" data-dismiss="alert">x</button>
      <%= value %>
      <a href="#">我是一个链接</a>
      <a href="#" class="alert-link">我是一个加了.alert-link的链接</a>
      <a href="#" style="color:red">我是一个加了style属性的链接</a>
    </div>
  <% end %>
<% end %>
