<%= link_to("add a job", new_job_path, class:"btn btn-default pull-right")%>

<div class="dropdown pull-right" id="collapse-1">
  <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">排序</button>
  <ul class="dropdown-menu">
    <li><%= link_to("按照薪资下限排序", jobs_path(:order => "by_lower_bound"))%></li>
    <li><%= link_to("按照薪资上限排序", jobs_path(:order => "by_upper_bound"))%></li>
    <li><%= link_to("按照发布日期排序", jobs_path)%></li>
  </ul>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th class="success">Title</th>
      <th class="danger">description</th>
      <th>薪资下限</th>
      <th>薪资上限</th>
      <th>发布时间</th>
    </tr>
  </thead>
  <tbody>
      <% @jobs.each do |job| %>
        <tr>
          <td><%= link_to(job.title,job_path(job)) %></td>
          <td><%= job.description %></td>
          <td><%= job.wage_lower_bound %></td>
          <td><%= job.wage_upper_bound %></td>
          <td><%= job.created_at %></td>
          <td><%= link_to("Edit", edit_job_path(job))%> |
              <%= link_to("Destroy", job_path(job), method: :delete,
                          data: {confirm:"Are you sure?"})%>
          </td>
        </tr>
      <% end %>
  </tbody>
</table>
