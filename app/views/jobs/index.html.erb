<div class="col-md-12">
  <div class="">
    <%= link_to("add a job", new_job_path, class:"btn btn-default pull-right")%>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <th class="success">Title</th>
        <th class="danger">description</th>
        <!-- <th></th>
        <th></th> -->
      </tr>
    </thead>
    <tbody>
        <% @jobs.each do |job| %>
          <tr>
            <td><%= link_to(job.title,job_path(job)) %></td>
            <td><%= job.description %></td>
            <td><%= link_to("Edit", edit_job_path(job))%> |
                <%= link_to("Destroy", job_path(job), method: :delete,
                            data: {confirm:"Are you sure?"})%>
            </td>
          </tr>
        <% end %>
    </tbody>
  </table>
</div>
